{
  "compilerOptions": {
    "rootDir": "./src",
    "module": "commonjs",
    "strict": true,
    {{#supportsES6}}
    "target": "es6",
    "esModuleInterop": true,
    {{/supportsES6}}
    {{^supportsES6}}
    "target": "es5",
    {{/supportsES6}}
    "moduleResolution": "node",
    "declaration": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "removeComments": true,
    "sourceMap": true,
    "outDir": "./dist",
    "noLib": false,
    {{#platforms}}
    {{#node}}
    "lib": [ "es6" ],
    {{/node}}
    {{#browser}}
    "lib": [ "es6", "dom" ],
    {{/browser}}
    {{/platforms}}
    {{#useInversify}}
    "experimentalDecorators": true,
    {{/useInversify}}
    "typeRoots": [
        "node_modules/@types"
    ]
  },
  "include": [
      "src/**/*.ts"
  ],
  "exclude": [
    "dist",
    "node_modules"
  ]
}
